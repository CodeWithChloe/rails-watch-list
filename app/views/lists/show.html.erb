<h2><%= @list.name %></h2>


<h3>My movies :</h3>

<div class="container">
  <% @bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.comment %></p>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
      </div>
    </div>
  <% end %>
</div>


<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>


<%= link_to "Back to my lists", lists_path %>
